<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/home_11"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="Welcome To Kiiskin"
            android:textColor="#673AB7"
            android:textSize="30sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="201dp"
            android:layout_height="84dp"
            android:text="@string/keep_track_of_your_moles"
            android:textColor="#673AB7"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/UserMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/enter_your_name"
             />

        <Button
            android:id="@+id/MainRegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="registration"
            />

        <Button
            android:id="@+id/MainSignInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            />

    </LinearLayout>

    <include
        android:id="@+id/main_registration"
        android:visibility="gone"
        layout="@layout/activity_signup"/>

    <include
        android:id="@+id/main_signin"
        android:visibility="gone"
        layout="@layout/activity_signin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>