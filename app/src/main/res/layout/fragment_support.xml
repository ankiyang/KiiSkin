<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentThree">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/UserInfo"
            android:layout_width="426dp"
            android:layout_height="146dp"
            android:src="@drawable/support"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="225dp" />

        <TextView
            android:id="@+id/supprttitle"
            android:layout_width="330dp"
            android:layout_height="69dp"
            android:layout_marginTop="30dp"
            android:fontFamily="monospace"
            android:gravity="start"
            android:text="KiiSkin Support"
            android:textColor="#673AB7"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_support"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:fontFamily="monospace"
            android:gravity="start"
            android:text="We would like to hear your feedback on the application."
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TellStory"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="monospace"
            android:gravity="start"
            android:text="Tell Your Story"
            android:textColor="#673AB7"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/letmeknow"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:fontFamily="monospace"
            android:gravity="start"
            android:text="Let us know why you are using KiiSkin and help us improve the app to fit your purpose."
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/AdviceInput"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Write Here" />

        <Button
            android:id="@+id/SendStoryButton"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:importantForAutofill="no"
            android:text="Send Story"
            android:textAlignment="center"
            android:layout_gravity="end"/>


    </LinearLayout>




</LinearLayout>