<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="286dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:text="@string/settings"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/questionImage"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/ContactSupportText"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Support" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/downloadImage"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/download" />

        <TextView
            android:id="@+id/DownloadText"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Download Photos" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aboutImage"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/question2" />

        <TextView
            android:id="@+id/aboutText"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/SynchronizationImage"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/syn" />

        <TextView
            android:id="@+id/SynchronizationText"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Synchronization" />

    </LinearLayout>

    <Button
        android:id="@+id/ButtonShareToOtherApps"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/share_kiiskin_with_others"
        android:textSize="18sp" />

</LinearLayout>